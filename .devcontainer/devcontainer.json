{
    "name": "Walkscape Optimizer Toolkit",
    "image": "mcr.microsoft.com/devcontainers/python:3.12",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": false,
                "python.formatting.provider": "none",
                "python.analysis.typeCheckingMode": "basic",
                "files.exclude": {
                    "**/__pycache__": true,
                    "**/*.pyc": true,
                    "**/.DS_Store": true
                },
                "files.watcherExclude": {
                    "**/__pycache__/**": true,
                    "**/util/cache/**": true,
                    "**/util/scrapers/cache/**": true
                }
            }
        }
    },
    "postCreateCommand": "pip install --no-cache-dir -r requirements.txt && echo 'âœ“ Walkscape Optimizer ready! Edit my_config.py to get started.'",
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    }
}